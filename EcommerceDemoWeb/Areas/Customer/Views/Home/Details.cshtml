@using EcommerceDemoWeb.Areas.Customer.Models
@model ShoppingCart
<form method="post" asp-for="ProductId">
        <div class="card  container">
            <div class="card-header bg-primary text-light ml-0  row ">
                <div class="col-12 col-md-6">
                    <h1 class="text-white-50">@Model.Product.Name</h1>
                    <p class="text-warning">@Model.Product.Brand</p>
                </div>
                <div class="col-12 col-md-6 text-end pt-4">
                    <span class="badge bg-info pt-2" style="height:30px;">@Model.Product.SellerName</span>
                    <span class="badge bg-warning pt-2" style="height:30px;">@Model.Product.CategoryName</span>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted">ProductId : @Model.Product.ProductId</h5>
                            </div>
                            <div class="row pl-2">
                                <h5 class="text-muted pb-2">Price: @Model.Product.ListPrice</h5>
                            </div>
                            
                            
                            <div class="row pl-2">
                                <p class="text-secondary">Description</p>
                                <p class="text-secondary">@Html.Raw(@Model.Product.Description)</p>
                            </div>
                            <div class="row pl-2">
                                <div class="col-2 text-primary"><h4>Count</h4></div>
                                <div class="col-10" ><input class="form-control" asp-for="Count" /></div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Back to Home</a>
                    </div>
                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                    </div>
                </div>
            </div>
        </div>
</form>
